<h1 class="log">TODOS</h1>

<div class="row">
  <%@todos.each do |todo|%>
      <%if todo.name%>
            <div class="col-sm-4 " >
                <div class="price-box">
                    <h1><b><%=Course.find(todo.course_id).name%></b></h1>
                    <h3><b>Assignment: </b><%=todo.name%></h3>
                    <h3><b>Category: </b><%=todo.category%></h3>
                    <h3><b>Deadline: </b><%=todo.deadline%></h3>
                    <button class="btn btn-banner"><a href="/todos/<%=todo.id%>/edit">EDIT</a></button>
                    <form action="/todos/<%=todo.id%>/delete" method="post">
										  <input id="hidden" type="hidden" name="_method" value="delete">
										  <input class="btn btn-banner" type="submit" value="DELETE ASSIGNMENT">
										</form>

                </div>
            </div>
      <%end%>
  <%end%>

        </div>
